<div tabindex="-1" class="modal fade" id="send-req-success-modal" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
        <div class="media-body media-middle">
          <h3 class="pmd-card-title-text text-center h2-text">Borrow request has been sent</h3>
        </div>
      </div>
      <div class="pmd-modal-media row">
        <img class="col-sm-5 col-sm-offset-1 modal-book-img" height="350px"
          src="<%= book.images.first.url %>">
        <div class="col-sm-5 modal-borrow-info">
          <h3><%= book.title %></h3>
          <h4>
            <%= t "books.show.isbn" %>
            <%= book.isbn %>
          </h4>
          <h4>
            <%= t "books.show.modal.start_date" %>
            <%= req.time_start.strftime("%Y-%m-%d") %>
          </h4>
          <h4>
            <%= t "books.show.modal.end_date" %>
            <%= req.time_end.strftime("%Y-%m-%d") %>
          </h4>
          <h4>
            <%= t "books.show.modal.created_at" %>
            <%= req.created_at.strftime("%Y-%m-%d") %>
          </h4>
          <h4>
            <%= t "books.show.modal.status" %>
            <% case req.status %>
            <% when "approved" %>
              <span class="approve">
                <%= t "books.show.modal.approved" %>
              </span>
            <% when "cancel" %>
              <span class="cancel">
                <%= t "books.show.modal.cancel" %>
              </span>
            <% when "reject" %>
              <span class="reject">
                <%= t "books.show.modal.reject" %>
              </span>
            <% else %>
              <span class="not-approve">
                <%= t "books.show.modal.not_approved" %>
              </span>
            <% end %>
          </h4>
          <p class="message"><%= t "books.show.modal.admin_message" %></p>
        </div>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>
