<div class="relate-book">
  <p class="book-title relate-title">Related Book</p>
  <div class="relate-book-cont">
    <div class="owl-carousel owl-theme">
      <% book.find_related_book.each do |b| %>
        <%= link_to book_path(b) do %>
          <div class="item-book pmd-z-depth-2" data-url="<%= b.id %>">
            <div class="img-container">
              <% if b.images.first.present? %>
                <img src="<%= b.images.first.url %>" class="img-responsive"
                  alt="<%= b.title %>">
              <% else %>
                <img src="<%= asset_path "default-book.png" %>" class="img-responsive"
                  alt="<%= b.title %>">
              <% end %>
              <span><%= b.title %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
