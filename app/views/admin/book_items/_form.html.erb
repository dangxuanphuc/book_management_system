<div class="book-form col-xs-12">
  <%= form_for [:admin, book, book_item] do |f| %>
    <%= f.hidden_field :book_id, value: book.id %>
    <%= f.label :location, class:"form-label" %>
    <%= f.text_field :location, class: "form-control" %>
    <%= f.label :description, class:"form-label" %>
    <%= f.text_field :description, class: "form-control" %>
    <%= f.label :state, class:"form-label" %>
    <%= f.select :state, BookItem.states.keys.to_a %>
    <div class="text-center">
      <% if book_item.new_record? %>
        <%= f.submit class: "btn btn-primary" %>
        <%= f.submit t("button.clear"), type: :reset,
          class: "btn btn-danger" %>
      <% else %>
        <%= f.submit class: "btn btn-success"%>
        <%= f.submit t("button.clear"), type: :reset,
          class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
</div>
