<ol class="breadcrumb text-left">
  <li><%= link_to t(".link1"), admin_authors_path,
    "data-turbolinks": false %></li>
  <li><%= link_to @author.name, admin_author_path(@author),
    "data-turbolinks": false %></li>
  <li class="active"><%= t ".link2" %></li>
</ol>
<h1 class="section-title text-center" id="services">
  <span><%= t ".page_title" %></span>
</h1>
<div class="col-xs-12">
  <% flash.each do |key, value| %>
    <div class="flash-message <%= key %>">
      <%= value %>
    </div>
  <% end %>
  <%= render "form", author: @author, books: @books %>
</div>
