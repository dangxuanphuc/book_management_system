<% provide :title, t("layouts.header.signup") %>
<div class="signup-card">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 pmd-z-depth-1">
        <div class="panel panel-primary style-panel-top">
          <div class="panel-body">
            <h1 class="text-center text-uppercase">
              <%= t "layouts.header.signup" %>
            </h1><hr>
            <%= form_for(resource, as: resource_name,
              url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :name, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">perm_identity</i>
                  </div>
                  <%= f.text_field :name, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :email, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">perm_identity</i>
                  </div>
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password, autocomplete: "off",
                    class: "form-control" %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password_confirmation, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password_confirmation,
                    autocomplete: "off", class: "form-control" %>
                </div>
              </div>

              <div class="actions">
                <%= f.submit t("layouts.header.signup"),
                  class: "btn pmd-ripple-effect btn-primary btn-block" %>
              </div>
            <% end %>
            <div class="text-center">
              <hr >
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
