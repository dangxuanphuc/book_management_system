<h1 class="section-title" id="services">
  <span><%= t "user.edit.profile.title" %></span>
</h1>
<h3 class="heading"><%= t "user.edit.profile.title" %></h3>
<div class="row">
  <%= form_for user, html: {class: "form-horizontal"},
    url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: user %>
    <fieldset>
      <div class="form-group prousername pmd-textfield">
        <%= f.label :email, class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <p class="form-control-static">
            <strong>
              <%= user.email %>
            </strong>
          </p>
        </div>
      </div>
      <div class="form-group pmd-textfield">
        <%= f.label :name, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :name, id: "inputName",
            class: "form-control empty" %>
        </div>
      </div>
      <div class="form-group prousername pmd-textfield">
        <label class="control-label col-sm-3">
          <%= t "user.edit.profile.role" %>
        </label>
        <div class="col-sm-9">
          <p class="form-control-static">
            <strong><%= user.role %></strong>
          </p>
        </div>
      </div>
      <div class="form-group btns margin-bot-30">
        <div class="col-sm-9 col-sm-offset-3">
          <%= f.submit "Update", class: "btn btn-primary
            pmd-ripple-effect user-edit-btn" %>
          <button class="btn btn-default pmd-ripple-effect">Cancel</button>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
