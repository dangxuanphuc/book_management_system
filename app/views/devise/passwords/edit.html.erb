<% provide :title, t("layouts.header.editpsw") %>
<div class="login-card">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 pmd-z-depth-1">
        <div class="panel panel-default style-panel-top">
          <div class="panel-body">
            <h1 class="text-center text-capitalize">
              <%= t "devise.passwords.change_pass_heading" %>
            </h1><hr>
            <%= form_for(resource, as: resource_name,
              url: password_path(resource_name),
              html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages",
                resource: resource %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password, t("devise.passwords.new_pass"),
                  class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password, autofocus: true,
                    class: "form-control", autocomplete: "off"%>
                </div>
              </div>
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password_confirmation, t("devise.passwords.confirm_pass"),
                  class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password_confirmation,
                    autofocus: true, class: "form-control",
                    autocomplete: "off"%>
                </div>
              </div>
              <div class="actions">
                <br>
                <%= f.submit t("devise.passwords.change_my_pass"),
                  class: "btn btn-block btn-primary" %>
              </div>
            <% end %>
            <div class="text-center">
              <hr>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
