<% provide :title, t(".chat") %>
<div class="container-fluid header-block">
  <h1 class="text-capitalize">
    <%= t ".chat" %>
  </h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t ".list_user" %></h3>
        </div>
        <div class="panel-body list-user">
          <ul>
            <% @users.each do |user| %>
              <li><%= link_to user.name, "#",
                id: "user-id-#{user.id}",
                class: "current-user-#{current_user.id}" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div id="conversation"></div>
    </div>
  </div>
</div>
